<div class="jumbotron">
  <h1 class="display-4">
    <%= @friend.first_name %>
    <%= @friend.last_name %>
  </h1>
  <p class="lead">
    <strong>Email:</strong>
    <%= @friend.email %><br><br>
    <strong>Phone number:</strong>
    <%= @friend.phone_number %>
  </p>
  <hr class="my-4">
  <p>
    <strong>Twitter:</strong>
    <%= @friend.twitter %><br>
    <strong>Snapchat:</strong>
    <%= @friend.snapchat %>
  </p>
  <%= link_to 'Edit', edit_friend_path(@friend), class:"btn btn-secondary" %>
  <%= link_to 'Delete', @friend, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
  <%= link_to 'Back', friends_path, class:"btn btn-dark" %>
</div>