<%= form_with(model: friend) do |form| %>
  <% if friend.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(friend.errors.count, "error") %> prohibited this friend from being saved:</h2>

      <ul>
        <% friend.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <% form.label :first_name %>
    <%= form.text_field :first_name, class:"form-text text-muted form-control", placeholder: "First Name" %>
  </div>

  <div class="field form-group">
    <% form.label :last_name %>
    <%= form.text_field :last_name, class:"form-text text-muted form-control", placeholder: "Last Name"  %>
  </div>

  <div class="field form-group">
    <% form.label :email %>
    <%= form.text_field :email, class:"form-text text-muted form-control", placeholder: "Email"  %>
  </div>

  <div class="field form-group">
    <% form.label :phone_number %>
    <%= form.text_field :phone_number,class:"form-text text-muted form-control" , placeholder: "Phone Number"  %>
  </div>

  <div class="field form-group">
    <% form.label :twitter %>
    <%= form.text_field :twitter, class:"form-text text-muted form-control" , placeholder: "Twitter" %>
  </div>

  <div class="field form-group">
    <% form.label :snapchat %>
    <%= form.text_field :snapchat, class:"form-text text-muted form-control", placeholder: "Snapchat"  %>
  </div>

  <div class="field form-group">
    <% form.label :user_id %>
    <%= form.text_field :user_id,  class:"form-control", id: :friend_user_id, value: current_user.id, type: :hidden  %>
  </div>

  <br/>
  <div class="actions">
    <%= form.submit class:"btn btn-secondary" %>
  </div>
<% end %>
